-- 查詢 --
SELECT  A.*, B.COL1, C.COL2
  FROM A_TABLE_NAME A, B_TABLE_NAME B
  LEFT JOIN C_TABLE_NAME C ON C.COL1 = B.COL1
  WHERE A.COL1 > 500
  ORDER BY A.COL1

-- 新增 --
INSERT INTO A_TABLE_NAME
  (COL1, COL2, COL3)
  VALUES
  (VAL1, VAL2, VAL3)

-- 修改/更新 --
UPDATE A_TABLE_NAME
  SET COL1 = VAL1,
      COL2 = VAL2,
      COL3 = VAL3
  WHERE CONDITION

-- 刪除 --
DELETE FROM A_TABLE_NAME
  WHERE CONDITION
